{
  "name": "job-search-optimizer",
  "version": "2.0.0",
  "description": "Enterprise job search optimization platform with validated learning",
  "main": "index.html",
  "scripts": {
    "dev": "live-server --port=3000 --open=/index.html",
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o dist/style.min.css style.css",
    "minify-js": "uglifyjs app.js -o dist/app.min.js --compress --mangle",
    "serve": "http-server . -p 8080 -o",
    "test": "echo 'Testing with sample data' && npm run serve",
    "lint": "eslint app.js --fix",
    "format": "prettier --write '*.{js,css,html}'",
    "deploy": "npm run build && gh-pages -d dist -b gh-pages",
    "start": "npm run serve"
  },
  "keywords": [
    "job-search",
    "optimization",
    "crypto",
    "fintech",
    "AI",
    "product-management"
  ],
  "author": "Job Search Optimizer Team",
  "license": "MIT",
  "devDependencies": {
    "live-server": "^1.2.2",
    "http-server": "^14.1.1",
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "gh-pages": "^6.0.0"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
